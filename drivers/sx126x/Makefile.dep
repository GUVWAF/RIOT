USEMODULE += iolist
USEMODULE += netdev_legacy_api
USEPKG += driver_sx126x
FEATURES_REQUIRED += periph_gpio_irq


USEMODULE += ztimer_usec
USEMODULE += event_thread
USEMODULE += event_callback

CFLAGS += -DCONFIG_IEEE802154_DEFAULT_SUBGHZ_CHANNEL=0
CFLAGS += -DCONFIG_IEEE802154_DEFAULT_CHANNEL=0
CFLAGS += -DCONFIG_IEEE802154_DEFAULT_SUBGHZ_PAGE=3
CFLAGS += -DACK_TIMEOUT_SYMS=255
CFLAGS += -DCONFIG_IEEE802154_AUTO_ACK_DISABLE=1
CFLAGS += -DCONFIG_IEEE802154_DEFAULT_ACK_REQ=0
ifneq (,$(filter netdev,$(USEMODULE)))
  USEMODULE += lora
endif
ifneq (,$(filter ieee802154 netdev,$(USEMODULE)))
  USEMODULE += netdev_ieee802154_submac
endif

